<div id="main-container">
  <h2>Créer votre compte</h2>
  <hr class="featurette-divider" id="line-separator-signup">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="form-group">
      <%= f.label "Email:" %> 
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Mot de passe:" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> lettres minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Confirmation du mot de passe:" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Ce qui vous correspond le mieux:" %><br />
      <%= f.radio_button :gender, "homme", :checked => true %>
      <span class = "glyphicon glyphicon-user"></span> 
      <%= label :gender_male, :gender, "Homme" %>
      <%= f.radio_button :gender, "femme" %>
      <span class="glyphicon glyphicon-girl"></span>
      <%= label :gender_female, :gender, "Femme" %>
    </div>

    <div class="form-group">
      <%= f.label "Prénom:" %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Nom:" %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Date de naissance:" %>
      <%= f.date_select :birthday, :order => [:day, :month, :year], start_year: 1900, date_separator: '/',  end_year: (Time.now.year), class: 'form-control' %>
    </div>

    <%= f.submit "Créer mon compte", class: "btn btn-large btn-block btn-primary" %>
    
  <% end %>
  <!-- <%= render "devise/shared/links" %> -->
</div>